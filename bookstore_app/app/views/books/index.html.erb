<div class="container">
<h2> Books Available </h2> 
<table border="1" class="table">
	<tr>
		<th> Book Title </th>
		<th> Book Code </th>
		<th> Book Price </th>
		<th> Publisher </th>
		<th> Book Description </th>
		<th> Book Page </th>
	</tr> 
<% @books.each do |book| %> 
	<tr>
		<td> <%= book.title %> </td> 
		<td> <%= book.book_id %> </td> 
		<td> <%= book.price %> </td> 
		<td> <%= book.publisher %> </td> 
		<td> <%= book.description %> </td> 
		<td> <%= link_to 'Book Page', book_path(book) %> </td> 
	</tr> 
<% end %>
</table>
</div> 